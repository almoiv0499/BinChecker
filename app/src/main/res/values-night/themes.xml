<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FindBIN" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary_dark</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/color_control_normal_dark</item>
    </style>

    <style name="StyleTextViewDetailForBankInformationFragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/archivo</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:background">@drawable/rounded_text_view</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StyleTextViewTitleForBankInformationFragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:background">@drawable/rounded_for_title_dark</item>
        <item name="android:fontFamily">@font/archivo_black</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StyleButtonPassBinFragment">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="StyleTextViewTitlePassBinFragment">
        <item name="android:background">@drawable/rounded_bin_number_dark</item>
    </style>

    <style name="StyleTextViewTitleStoredBinNumbersFragment">
        <item name="android:background">@drawable/rounded_for_title_dark</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>